  "bugs": {
    "url": "https://github.com/mapikit/meta-function-helper/issues"
  },
  "homepage": "https://github.com/mapikit/meta-function-helper",
  "dependencies": {
    "chalk": "^4.1.0",
    "semver": "^7.3.4"
  },
  "devDependencies": {
    "@types/node": "^14.14.25",
    "@types/semver": "^7.3.4",
    "typescript": "^4.3.5"
  }
