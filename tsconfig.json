{
  "compilerOptions": {
    "module": "ES2020",
    "esModuleInterop": true,
    "target": "ES2020",
    "lib": ["es6", "ES2017"],
    "types": ["node", "mocha"],
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "isolatedModules": true,
    "declaration": true
  },
  "inlcude": [
    "src/*",
  ],
  "exclude": [
    "test/*",
    "dist/*"
  ]
}
